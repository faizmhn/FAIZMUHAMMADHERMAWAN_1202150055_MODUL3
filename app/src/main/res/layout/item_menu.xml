<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="?android:selectableItemBackground"
    android:padding="5dp"
    card_view:cardBackgroundColor="@color/cardview_dark_background"
    android:layout_margin="12dp">

    <ImageView
        android:id="@+id/lblItemImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/aqua"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/lblItemJudul"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/lblItemDeskripsi"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/lblItemDeskripsi"
            android:text="Aqua"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/lblItemDeskripsi"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblItemJudul"
            android:maxHeight="60dp"
            android:text="Aqua adalah sebuah merek air minum dalam kemasan (AMDK)."
            android:textAlignment="gravity"
            android:textSize="14sp"
            android:textColorHint="@color/colorPrimary"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>